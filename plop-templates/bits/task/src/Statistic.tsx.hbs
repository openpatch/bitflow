import {
  AutoGrid,
  Card,
  CardContent,
  CardHeader,
  Text,
} from "@openpatch/patches";
import { useTranslations } from "@vocab/react";
import translations from "./locales.vocab";
import { TaskBit } from "./types";

export const Statistic: TaskBit["Statistic"] = ({ statistic, task }) => {
  const { t } = useTranslations(translations);
  return (
    <AutoGrid gap="standard" columns={2}>
      <Card>
        <CardHeader>{t("yes")}</CardHeader>
        <CardContent>
          <Text
            fontSize="large"
            textColor={task.evaluation.yes ? "success.700" : undefined}
          >
            {statistic.yes}
          </Text>
        </CardContent>
      </Card>
      <Card>
        <CardHeader>{t("no")}</CardHeader>
        <CardContent>
          <Text
            fontSize="large"
            textColor={!task.evaluation.yes ? "success.700" : undefined}
          >
            {statistic.no}
          </Text>
        </CardContent>
      </Card>
    </AutoGrid>
  );
};
