{
  "name": "bitflow",
  "main": "index.js",
  "author": "Mike Barkmin",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "examples/*"
  ],
  "scripts": {
    "test": "lerna run test --no-private --stream",
    "test:watch": "lerna run test:watch",
    "test:ci": "lerna run test:ci",
    "test:coverage": "lerna run test:coverage",
    "lint": "lerna run lint --no-private --stream",
    "clean": "lerna run clean --no-private --stream",
    "build": "lerna run build --no-private --stream",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn build && yarn storybook",
    "website:dev": "yarn workspace @bitflow/website dev",
    "website:build": "yarn workspace @bitflow/website build",
    "website:start": "yarn workspace @bitflow/website start",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "commit": "git-cz",
    "release": "auto shipit --base-branch main",
    "storybook": "start-storybook -s .storybook/public -p 6006",
    "storybook:build": "build-storybook -s .storybook/public",
    "storybook:build:docs": "build-storybook -s .storybook/public --docs"
  },
  "dependencies": {
    "@auto-it/all-contributors": "10.29.3",
    "@auto-it/conventional-commits": "10.29.3",
    "@auto-it/first-time-contributor": "10.29.3",
    "@auto-it/magic-zero": "10.29.3",
    "@babel/core": "7.14.6",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@emotion/babel-preset-css-prop": "11.2.0",
    "@emotion/cache": "11.4.0",
    "@emotion/react": "11.4.0",
    "@emotion/styled": "11.3.0",
    "@hookform/resolvers": "1.3.7",
    "@octokit/core": "3.5.1",
    "@openpatch/patches": "1.8.4",
    "@storybook/addon-a11y": "6.3.2",
    "@storybook/addon-actions": "6.3.2",
    "@storybook/addon-controls": "6.3.2",
    "@storybook/addon-docs": "6.3.2",
    "@storybook/addon-essentials": "6.3.2",
    "@storybook/addon-links": "6.3.2",
    "@storybook/addon-storysource": "6.3.2",
    "@storybook/addon-toolbars": "6.3.2",
    "@storybook/addon-viewport": "6.3.2",
    "@storybook/cli": "6.3.2",
    "@storybook/react": "6.3.2",
    "@testing-library/dom": "7.31.2",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@types/jest": "26.0.23",
    "@types/lodash.get": "4.4.6",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "@vocab/cli": "1.0.0",
    "@vocab/react": "1.0.1",
    "auto": "10.29.3",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.1",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lerna": "4.0.0",
    "lodash.get": "4.4.2",
    "plop": "2.7.4",
    "prettier": "2.3.2",
    "prettier-plugin-sort-json": "0.0.2",
    "pretty-quick": "3.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "6.15.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.6",
    "typescript": "4.3.5",
    "typescript-styled-plugin": "0.15.0",
    "webpack": "5.42.1",
    "zod": "3.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "pretty-quick --staged && yarn lint && yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "auto": {
    "plugins": [
      "npm",
      "magic-zero",
      "all-contributors",
      "conventional-commits",
      "first-time-contributor"
    ]
  }
}
