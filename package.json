    "@types/react": "17.0.15",
    "@types/react-dom": "17.0.9",
    "@vocab/cli": "1.0.0",
    "@vocab/react": "1.0.1",
    "babel-jest": "27.0.6",
    "babel-loader": "8.2.2",
    "concurrently": "6.2.0",
