{
  "name": "bitflow",
  "author": "Mike Barkmin",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "examples/*"
  ],
  "scripts": {
    "test": "lerna run test --no-private --stream",
    "test:watch": "lerna run test:watch",
    "test:coverage": "lerna run test:coverage",
    "lint": "lerna run lint --no-private --stream",
    "clean": "lerna run clean --no-private --stream",
    "build": "lerna run build --no-private --stream",
    "prestart": "yarn && yarn bootstrap",
    "publish:ci:npm": "lerna publish from-package -y --no-verify-access",
    "publish:ci:gpr": "lerna publish from-package -y --no-verify-access --registry https://npm.pkg.github.com/",
    "boot": "yarn prestart && yarn build",
    "start": "yarn build && yarn storybook",
    "website:dev": "yarn workspace website dev",
    "website:build": "yarn workspace website build",
    "website:start": "yarn workspace website start",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "storybook": "start-storybook -s .storybook/public -p 6006",
    "storybook:build": "build-storybook -s .storybook/public",
    "storybook:build:docs": "build-storybook -s .storybook/public --docs"
  },
  "dependencies": {
    "@babel/core": "7.14.8",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.8",
